<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="error"
            type="String" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MoonShot.Error.Card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/marginMedium">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginLarge"
                android:drawableStart="@drawable/ic_rocket"
                android:text="@{error}"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawablePadding="@dimen/marginMedium"
                android:drawableTint="@color/colorOnSurfaceHighEmp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MoonShot.Error.Main"
                tools:text="Failed to fetch resource" />

    </com.google.android.material.card.MaterialCardView>
</layout>